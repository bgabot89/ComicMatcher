<div class="container">


	<div class="row">

		<div class="col-md-12">

			<div class="panel panel-default">

                <div class="panel-heading">

                    <span class="panel-title">

						<div class="pull-left">
							<ul class="nav nav-tabs">
								<li class="inactive"><%= link_to "Profile", user_path(@user) %> </li>
								<li class="active"><a href=""><i class="glyphicon glyphicon-picture"></i> Gallery</a></li>
								<li class="inactive"><a href="/users/<%= @user.id%>/writings"><i class="glyphicon glyphicon-pencil"></i> Writings</a></li>
							</ul>
						</div>

                            <div class="btn-group pull-right">
                                    <% if current_user == @user %>
                                    <%= button_to edit_user_path(@user), :class => "btn btn-default dropdown-toggle", method: "get" do %> Settings <i class="glyphicon glyphicon-cog"></i>
                                    <%end%>
                                    <%end%>
                                <ul class="dropdown-menu" style="width:300px; padding:0px;">

										<li>


												    <div class="panel panel-default" id="preferences" style="margin:0px;">

									    <div class="panel-body">

    										<div class="form-group">

											</div>

										</div>



												</div>

										</li>
									</ul>


                            </div>

						<div class="clearfix"></div>

					</span>

				</div>

                <div class="panel-body">
                <div class="centered">
                <% if current_user == @user %>
                   <%= button_to edit_user_path, :class => "btn btn-info", method: "get" do %> Add a New Drawing Post
									<%end%>
									<% end %>
                </div>

                <!--trying to render drawing from each user -->
				<% if @user.person == "Artist" %>
				<div class="row">
  <ul class="thumbnails files">

  <!--for brian -->
  <% if @user.email == "bgabot89@gmail.com" %>
  <div class="thumbnail">
 	<img src="/images/ahri-ai.png">
 	</div>
	<div class="thumbnail">
 	<img src="/images/Soonsmall.png">
 	</div>
 	<% end %>
  <% @drawings.each do |pic| %>
    <li class="span3" id="drawing_<%= pic.id %>">
    <div class="thumbnail">
      <%= image_tag pic.image.url %>
      <div class="caption">

        <p style="text-align: center;">

        </p>
      </div>
    </div>
    </li>
    </ul>
      <% end %>
    <%else %>
    <p class= "user-text"> You must be registered as an Artist to post artwork </p>

  <% end %>
  </div>
  </div>



                </div>
