<div class="jumbotron">
  <h1>Sign Up</h1>
</div>

<%= form_for :user, url: "/users", method: "post" do |f| %>
    Username: <%= f.text_field :username, placeholder: "Username" %>
    <br>
    Email: <%= f.text_field :email, placeholder: "Email" %>
    <br>
     First Name: <%= f.text_field :first_name, placeholder: "First Name" %>
    <br>
    Last Name: <%= f.text_field :last_name, placeholder: "Last Name" %>
    <br>
    Age: <%= f.number_field :age, placeholder: "Age", min:13, max:100 %>
    <br>
    Password: <%= f.text_field :password, placeholder: "Password" %>
    <br>
  	Please select if you are signing up as a writer or an artist: <%= f.select :person, options_for_select([["Artist", true], ["Writer", true]]) %>
    <br>

    <%= f.submit "Sign Up" %>
<% end %>