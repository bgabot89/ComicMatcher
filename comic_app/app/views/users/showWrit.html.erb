
<div class="jumbotron">
  <h1><%= @user.username %>'s Writings</h1>
</div>

<!--Navbar -->
<link href="http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">

		
	<div class="row">
		
		<div class="col-md-12"> 
				
			<div class="panel panel-default">
			
                <div class="panel-heading">
               
                    <span class="panel-title">
					
						<div class="pull-left">
							<ul class="nav nav-tabs">
								<li><%= link_to "Profile", user_path(@user) %> </li>
								<li><a href="/users/<%= @user.id%>/gallery"><i class="glyphicon glyphicon-picture"></i> Gallery</a></li>
								<li class="active"><a href=""><i class="glyphicon glyphicon-pencil"></i> Writings</a></li>
							</ul>
						</div>
						
                            <div class="btn-group pull-right">
                                    <% if current_user == @user %>    
                                    <%= button_to edit_user_path(@user), :class => "btn btn-default dropdown-toggle", method: "get" do %> Settings <i class="glyphicon glyphicon-cog"></i>
                                    <%end%>
                                    <%end%>
                                <ul class="dropdown-menu" style="width:300px; padding:0px;">
            						
										<li>
											    

												    <div class="panel panel-default" id="preferences" style="margin:0px;">
											   
									    <div class="panel-body">
						
    										<div class="form-group">
											
											</div>
	 
										</div>
													
							
													
												</div>
											
										</li>
									</ul>

                          
                            </div>
						
						<div class="clearfix"></div>

					</span>
					
				</div>

                <div class="panel-body">
                <% if @user.person == "Writer" %>
                <p> Post your writings here </p>
                <!--Adds button to create a new post via modal dynamic-->
                   <button class ="btn btn-default" data-no-turbolink data-toggle="modal" data-target="#edit-modal">Add a New Writing Post</button>
                   <!--new button to create a new post-->
                   <%= button_to "/users/:id/writings/edit", :class => "btn-btn-default", method: "get" do %> Add a New Writing Post 
                   <%end%>
                <% else %>
                <p> You must be registered as a writer to post writings </p>
                    <% end %>



             
								</div>

								
								<!--Form popup for Writings-->
								<%= form_for @user do |f| %>
								<div id="edit-modal" class="modal fade">
								<div class="modal-dialog">
								<div class="modal-content">
								</div>
								<div class="modal-body">
								</fieldset>
								<legend>Add a New Post</legend>
								<%= f.submit "Add new Post", class: "btn btn-primary" %>
								</div>
								</div>
								<%end%>

 

                </div>