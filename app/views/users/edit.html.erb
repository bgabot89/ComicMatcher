<div class="jumbotron">
  <h1 class="jumbotron-text">Update</h1>
</div>

<%= form_for @user, :url => user_path, :html => { :multipart => true } do |f| %>
<div class = "container">
<div class = "row">
<form role ="form">
<div class="col-lg-10">
	  <br>
	  <div class="form-group">
    About: <%= f.text_area :about, class: "form-control1", placeholder: "About" %>
    </div>
    <br>
    <div class="text-field">
    Technologies/Softwares you use: <%= f.text_area :tech, class: "form-control1", placeholder: "If you're an artist, please input the technologies that you use " %>
    </div>
    <br>
    <!--Allow users to toggle for specific elements hidden -->
    <div class = "input-group">
    Show Gender on Profile Page: 
    <form action="">
<input type="checkbox" class="checkbox1" name="Gender" value="Yes">Yes   
<input type="checkbox" class="checkbox2" name="Gender" value="No">No 
</form>
    </div>
    <!--will update with gallery -->
  <div class="control-group"> Drawing:
      <!-- This is where the magic happens -->
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </div>

    <span class ="selector-text"> Update your Avatar:</span> <%= f.file_field :avatar, class: "form-control" %><br>
    <%= f.submit "Update", class: "btn btn-info" %>
    </div>
    </form>
    </div>
    </div>
    <% end %>
    
